#	Generate multiple passwords.

import random


characters_special = 'qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890!@#$%&Â£?'

print ("Password Generator\n")

numbers = input('How many passwords would you like? ')
numbers = int(numbers)

length = input('How many characters in each password? ')
length = int(length)


print("\nHere are your passwords: ")

for pw in range(numbers):
	passwords = ' '
	for l in range(length):
		passwords += random.choice(characters_special) 
			
	print (passwords)

	
